pico-8 cartridge // http://www.pico-8.com
version 42
__lua__
function stdout(bytes)
  for i = 0, #bytes do
    poke(0x4300 + i, bytes[i + 1])
  end
  serial(0x805, 0x4300, #bytes)
end

function stdin()
  local bytes = {}
  local i = 0
  repeat
    serial(0x804, 0x4300 + i, 1)
    bytes[i + 1] = peek(0x4300 + i)
    i += 1
  until(bytes[#bytes] == 10)
  return bytes
end

